<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>
<h3>All Articles</h3>

<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Text</th>
		<th>Creation time</th>
	</tr>

	<% @articles.each do | article | %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.author %></td>
		<td><%= article.text %></td>
		<td><%= article.created_at %></td>
		<td><%= link_to 'Show', article_path(article) %></td>

	</tr>
	<% end %>
</table>